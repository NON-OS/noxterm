{
  "name": "noxterm-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "NOXTERM Frontend - Production-ready terminal interface",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "tsc && vite build --mode production",
    "build:analyze": "npm run build -- --analyze",
    "preview": "vite preview --port 4173",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit --incremental",
    "test": "npm run type-check && npm run test:build && echo '✓ Production frontend validated successfully'",
    "test:build": "tsc && vite build",
    "test:basic": "node -e \"console.log('✓ Frontend validation passed')\"",
    "clean": "rm -rf dist node_modules/.vite",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,json}'"
  },
  "dependencies": {
    "@anyone-protocol/anyone-client": "^1.1.3",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-attach": "^0.9.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "noxterm",
    "terminal",
    "docker",
    "typescript",
    "privacy",
    "production",
    "enterprise"
  ],
  "author": "NOXTERM Team <team@nonos.systems>",
  "license": "BSD-3-Clause",
  "homepage": "https://nonos.systems",
  "repository": {
    "type": "git",
    "url": "https://github.com/NON-OS/noxterm.git"
  },
  "bugs": {
    "url": "https://github.com/NON-OS/noxterm/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
